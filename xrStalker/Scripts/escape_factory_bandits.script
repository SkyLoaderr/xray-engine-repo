function check_enemy( npc )
    local enemy = npc:best_enemy()
    if enemy then
        npc:set_sound_mask( -1 )
        npc:set_sound_mask( 0 )

        --local actor = level.actor()

        --if actor and enemy:id() == actor:id() then
            --npc:play_sound( snd_on_actor, 1, 0 )
        --    xr_sound.sound_update( npc, snd_on_actor, true )
        if enemy:name() == novice_name then
            --npc:play_sound( snd_novice_again, 1, 0 )
            xr_sound.sound_update( npc, snd_novice_again, true )
        end
    end
end

function novice_enemy( s )
    if not s.novice_enemy then
	    local novice = level.object( novice_name )
    	if novice then
	    	s.object:set_relation( game_object.enemy, novice )
	    	s.novice_enemy = true
    	end
    end
end

function check_actor( npc1, a )
	if the_actor and npc1:see( the_actor ) then
		a.enabled = false
		xr_motivator.storage[a.partner:id()].escape_factory_bandit.enabled = false

		xr_motivator.storage[npc1:id()].robber.enabled      = true
		xr_motivator.storage[a.partner:id()].robber.enabled = true
	end
end

