class "action_stand" (action_base)

function action_stand:__init( name, positions, storage ) super( nil, name )
    self.a              = storage
    self.positions      = positions
end

function action_stand:initialize()
    action_base.initialize( self )

    if not self.a.partner then
        self.a.partner = level.object( self.a.partner_name )
    end

    novice_enemy( self )
 
    self.object:set_node_evaluator      ()
    self.object:set_path_evaluator      ()
    self.object:set_desired_direction   ()
    self.object:set_sight               ( look.danger, nil, 0 )
    self.object:set_item                ( object.idle, self.object:best_weapon() )
    self.object:set_movement_type       ( move.stand )

    if is_object_online( self.a.partner:id() ) and self.a.partner:alive() then
        self.object:set_sight       ( look.direction, vector():set( self.a.partner:position() ):sub( self.object:position() ), 0 )
        self.object:set_body_state  ( move.standing )
        self.object:set_mental_state( anim.free )
    else
        self.object:set_sight       ( look.direction, self.a.way_safe:point( 1 ):sub( self.object:position() ), 0 )
        self.object:set_body_state  ( move.crouch )
        self.object:set_mental_state( anim.danger )
    end
    --self.object:set_sight( look.point, self.a.partner:position(), 0 )

    if self.object:level_vertex_id() == self.positions[1] then
        self.timer = device():time_global() + 15000
        self.next_pos = 2
    else
        self.timer = device():time_global() + 15000
        self.next_pos = 1
    end

--    printf( "look_around initialized" )
end

function action_stand:execute()
    action_base.execute( self )

    if is_object_online( self.a.partner:id() ) and self.a.partner:alive() then
    	check_actor( self.object, self.a )

        --globals.set_sound( self.object, rnd_phrases, false )
        xr_sound.sound_update( self.object, rnd_phrases )

        if self.timer <= device():time_global() then
            self.a.dest_vert_id = self.positions[self.next_pos]
        else
    --        if not self.object:is_body_turning() and self.object:animation_count() < 1 then
            if self.object:animation_count() < 3 then
                self.object:add_animation(
                    random_choice_weighted{
                        ["komandir_4"] = 60,
                        ["komandir_2"] = 30,
                        ["komandir_3"] = 20 },
                    true )
            end
        end
    else
        -- TODO звуки
    end
end

function action_stand:finalize()
    action_base.finalize( self )

    self.object:clear_animations()

    this.check_enemy( self.object )
end

