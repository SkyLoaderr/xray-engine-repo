    obj:add_sound( "script_replics\\bandit_1\\idle\\bandit_idle_2",            1, snd_type.talk, 2, 1, snd_idle_2 )
    obj:add_sound( "script_replics\\bandit_1\\idle\\bandit_idle_3",            1, snd_type.talk, 2, 1, snd_idle_3 )
    obj:add_sound( "script_replics\\bandit_1\\idle\\bandit_idle_4",            1, snd_type.talk, 2, 1, snd_idle_4 )
    obj:add_sound( "script_replics\\bandit_1\\idle\\bandit_idle_5",            1, snd_type.talk, 2, 1, snd_idle_5 )


    for i = 0, 1 do
        table.insert( rnd_phrases.sounds, { pack = snd_about_novice, id = i } )
    end
    for i = 0, 3 do
        table.insert( rnd_phrases.sounds, { pack = snd_about_zone, id = i } )
    end
    for i = 0, 1 do
        table.insert( rnd_phrases.sounds, { pack = snd_hiding_place, id = i } )
    end
    for i = snd_idle_2, snd_idle_5 do
        table.insert( rnd_phrases.sounds, { pack = i, id = 0 } )
    end
]]
    -- GOAP

    local operators  = {}
    local properties = {}

    local base_id = xr_evaluators_id.chugai_escape_factory_bandits_base
    properties["escape_factory_bandit"] = base_id + 0
    properties["in_pos"]                = base_id + 1
    properties["dead_hook"]             = base_id + 2
    properties["partner_alive"]         = base_id + 3
    properties["reaction"]              = xr_evaluators_id.reaction

    base_id = xr_actions_id.chugai_escape_factory_bandits_base
    operators["go_to_pos"]     = base_id + 0
    operators["stand"]         = base_id + 1
    operators["dead_hook"]     = base_id + 2
    operators["run_to_safe"]   = base_id + 3

    a.dest_vert_id = positions[1]

    local manager = obj:motivation_action_manager()
    manager:add_evaluator( properties["in_pos"], this.evaluator_in_pos( "property_in_pos", obj, a ) )
    manager:add_evaluator( properties["escape_factory_bandit"], this.evaluator_factory_bandit( "property_escape_factory_bandit", a ) )
    manager:add_evaluator( properties["dead_hook"], this.evaluator_dead_hook( "property_dead_hook", a ) )
    manager:add_evaluator( properties["partner_alive"], this.evaluator_partner_alive( "property_partner_alive", a ) )

    local action = this.action_go_to_pos( "action_go_to_pos", way_name, a )
