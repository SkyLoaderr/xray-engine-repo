-- Действие для перехвата смерти
---------------------------------------------------------------------------------------------------------------------
class "action_dead_hook" ( action_base )

function action_dead_hook:__init( name, storage ) super( nil, name )
    self.a = storage
end

function action_dead_hook:initialize()
    action_base.initialize( self )

    if not the_actor then
        the_actor = level.actor()
    end

    self.a.dead_hook = true

    -- отослать партнёра в безопасную точку и сделать актёра врагом
    if self.a.partner and is_object_online( self.a.partner:id() ) and self.a.partner:alive() then
        local pa        = xr_motivator.storage[self.a.partner_id].escape_factory_bandit
        pa.way_safe     = patrol( "way_factory_bandits_safe" )
        pa.dest_vert_id = pa.way_safe:level_vertex_id( 0 )

        self.a.partner:set_relation( game_object.enemy, the_actor )
    end

    the_actor:give_info_portion( "escape_factory_bandits_dead" )
end

function action_dead_hook:execute()
    action_base.execute( self )
end

function action_dead_hook:finalize()
    action_base.finalize( self )
end

