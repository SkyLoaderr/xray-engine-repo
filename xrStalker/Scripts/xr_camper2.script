  new_action = manager:action(stalker_ids.action_puzzle_solver)
    new_action:add_precondition(world_property(properties["need_camper"], false))
end

-- функции
function vector_copy_by_val(vec)
  local newvec = vector()
  newvec.x = vec.x
  newvec.y = vec.y
  newvec.z = vec.z
  return newvec
end
