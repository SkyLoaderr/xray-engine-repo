    if self.object:object ("bread") ~= nil or 
       self.object:object ("kolbasa") ~= nil or 
       self.object:object ("conserva") ~= nil or
       self.object:object ("vodka") ~= nil then
       --printf ("FOOD PRESENT")
       return true
    end    
    --printf ("NO FOOD")
    return false
end
