local operators		= {}
local properties	= {}
	
properties["rest"]             = xr_evaluators_id.sidor_rest      + 0
properties["food"]             = xr_evaluators_id.sidor_rest      + 1
properties["state"]            = xr_evaluators_id.state_change 
operators["action_rest"]       = xr_actions_id.sidor_act_rest     + 0


