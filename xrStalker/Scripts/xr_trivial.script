function bind_object( obj, name )
	if( name == "zombie" ) then
		this.add_zombie ( obj )
	elseif( name == "novice" ) then
		this.add_novice( obj )
	elseif( name == "novice2" ) then
		this.add_novice2( obj )
	elseif( name == "novice3" ) then
		this.add_novice3( obj )
	end
end
