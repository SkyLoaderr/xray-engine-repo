class "novice3_attack" (action_base)
function novice3_attack:__init (name, storage) super (nil, name)
    self.a    		= storage
    self.time 		= 0
    self.start_run 	= false
    self.end_run   	= false
    self.walk_time 	= 0
    self.state     	= 0
	self.move_mgr 	= move_mgr.move_mgr()
	
	--0 - говорим фразу и начинаем бежать
	--1 - бежим
    --2 - идем к предпоследней точке
    --3 - стоим и смотрим
end
---------------------------------------------------------------------------------------------------------------------
function novice3_attack:initialize ()
    action_base.initialize(self)

	self.move_mgr:initialize(self.object)
	
	self.path_walk_info = utils.path_parse_waypoints(self.a.enemy_path_walk)
	self.path_look_info = utils.path_parse_waypoints(self.a.enemy_path_look)
	
	if(self.state == 0) then
		// Говорим
		xr_sounds.play_sound (self.object, 0, "trivial", 4, 3)
		self.move_mgr:reset(self.a.enemy_path_walk, self.path_walk_info, self.a.enemy_path_look, self.path_look_info, nil,
								true, nil)

    elseif(self.state == 1)then
		// Бежим
		self.move_mgr:reset(self.a.enemy_path_walk, self.path_walk_info, self.a.enemy_path_look, self.path_look_info, nil,
								false, nil)
	end

	-- Инициализируем инфопоршн
	local actor = level.actor()
	if actor ~= nil then
		actor:give_info_portion("escape_novice_has_weapon")
	end

	--Отключаем реакции
	xr_reactions.add_rule(self.object, "ignore")
	self.object:disable_talk()
end
---------------------------------------------------------------------------------------------------------------------
function novice3_attack:execute ()
	action_base.execute(self)

    self.object:set_item             ( object.idle, self.object:best_weapon() )

	if(self.state == 0 and self.object:active_sound_count() == 0) then
		if(self.move_mgr.last_index == nil) then 
			self.move_mgr.running = true
			self.move_mgr:update_movement_state()
		end
		self.state	= 1
	end
  
	self.move_mgr:update()
end
---------------------------------------------------------------------------------------------------------------------
function novice3_attack:finalize ()
	action_base.finalize(self)
	self.move_mgr:finalize()
	
	--Если схема заканчивает работу, то включаем встречу
	if(level.actor():has_info("escape_factory_bandits_dead")) then
		xr_meet.enable_meet(self.object)
	end
	
	--Включаем реакции
	xr_reactions.remove_rule(self.object, "ignore")
end

