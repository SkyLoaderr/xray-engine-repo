function add_rule(obj, rule)
	if xr_motivator.storage[obj:id()].reactions.rules.evn:ruleExist(rule) == false then
		table.insert(xr_motivator.storage[obj:id()].reactions.rules, rule)
	end
end

function remove_rule(obj, rule)
	local tt = {}
	for k,v in xr_motivator.storage[obj:id()].reactions.rules do
		if v == rule then
			table.insert(tt, k)
		end
	end
	for k,v in tt do
		table.delete(xr_motivator.storage[obj:id()].reactions.rules, v)
	end
end
