local def_attack_dist = 100 * 100 -- рассто€ние, на котором вертолЄт может быть атакован

function level_object_by_sid( sid )
	local sim = alife()

	if sim then
		local se_obj = sim:story_object( sid )
		if se_obj then
			return level.object_by_id( se_obj.id )
		end
	end

	return nil
end

