
function main ()

	local mover = get_level_object ("mover")
	mover:script (true, s_test2.script_name ())
	action (mover, move (move.standing, move.walk, move.line, patrol ("way0000")),
			look (look.search), anim (anim.free), cond (cond.time_end, time_infinite))

	local time = game.time ()

	local act = false

	while true do 
		  if game.time () - time > 5000 then
			 time = game.time ()
			 if act == false then
  			    update_action (mover, s_test2.script_name (), sound ("scripts\\stalker_prof\\prof_do_basi_bi_dobratsya", "bip01_head", vector():set(0,0,0), vector():set(0,0,0), false), look (look.path_dir))
				act = true
			 else 
			    update_action (mover, s_test2.script_name (), look (look.fire_point, get_actor ()))
				act = false
			 end
		  end
		  wait ()
	end	

	mover:script (false, s_test2.script_name ())

end