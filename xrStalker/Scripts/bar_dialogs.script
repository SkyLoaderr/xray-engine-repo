-- new arena

function arena_has_reward ()
	return db.actor:has_info("bar_arena_fight_1_reward") or db.actor:has_info("bar_arena_fight_2_reward") or db.actor:has_info("bar_arena_fight_3_reward") or db.actor:has_info("bar_arena_fight_4_reward") or db.actor:has_info("bar_arena_fight_5_reward") or db.actor:has_info("bar_arena_fight_6_reward") or db.actor:has_info("bar_arena_fight_7_reward") or db.actor:has_info("bar_arena_fight_8_reward")
end

function arena_hasnt_reward ()
	return not( db.actor:has_info("bar_arena_fight_1_reward") or db.actor:has_info("bar_arena_fight_2_reward") or db.actor:has_info("bar_arena_fight_3_reward") or db.actor:has_info("bar_arena_fight_4_reward") or db.actor:has_info("bar_arena_fight_5_reward") or db.actor:has_info("bar_arena_fight_6_reward") or db.actor:has_info("bar_arena_fight_7_reward") or db.actor:has_info("bar_arena_fight_8_reward"))
end

function arena_rank_check_true ()
	if db.actor:has_info("bar_arena_fight_6_done") or db.actor:has_info("bar_arena_fight_3_done") then
		if db.actor:has_info("bar_arena_fight_3_done") and (db.actor:character_rank() > 300) and not(db.actor:has_info("bar_arena_fight_6_done")) then
			return true
		end
	elseif db.actor:has_info("bar_arena_fight_6_done") and (db.actor:character_rank() > 600) then
		return true 	
	else 
		return false
	end
end

function arena_rank_check_false ()
	return not arena_rank_check_true ()
end

