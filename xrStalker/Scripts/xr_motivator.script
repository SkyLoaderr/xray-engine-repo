function motivator_binder:reload (section)
    object_binder.reload(self, section)
    printf ("ReLoad called")
    self.object:set_pda_callback(pda_callback)
end
----------------------------------------------------------------------------------------------------------------------
function pda_callback(recepient, who, msg_type)
    recepient:answer_pda ()
end
