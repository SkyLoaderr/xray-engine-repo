function main ()

  wait  (3000)

  local actor = get_actor ()

  while true do
            h = hit()
            h.power      = 10
            h.direction:set  (1,0,0)
            h.bone      ("bip01_head")
            h.draftsman    = actor
            h.impulse    = 10
            h.type      = hit.wound
            actor:hit    (h)
            wait (1000)
            end

end
