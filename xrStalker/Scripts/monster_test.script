function main()

	local monster = get_level_object("monster")

	monster:script( true, script_name() )

	while true do
		action( monster,
			move	(move.run_fwd), 
			patrol	("way", patrol.next, patrol.continue),
			cond	(cond.move_end)
		)

		while monster:action() do wait() end
		
	end

	monster:script( false, script_name() )

end


