
function action_one( npc )
	action( npc, anim("spinka"), cond(cond.anim_end));
end

function action_two( npc )
	action( npc, anim("spinka_idle"), cond(cond.anim_end));
end


function main()
	printf	("Taking Script");

	local	 monster = get_level_object("trader");
	wait	(5000);
	
	printf	("Taking Script");
	
	local	stage = 0;
	
	monster:script( true, script_name() )
	
	while ( true ) do

		if( monster:action() == nil ) then
			if(stage == 0)
				this.action_one( monster )
				stage = 1
			else 
				this.action_two( monster )
				stage = 0
			end
		end

	 end
	
	monster:script( false, script_name() )
	
end
