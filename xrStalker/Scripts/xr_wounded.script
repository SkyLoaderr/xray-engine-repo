function evaluator_wound:evaluate ()
	local overrides = xr_logic.generic_scheme_overrides (self.object)
	if overrides ~= nil and overrides.wounded_enabled == false then
  	   return false
	end

    if self.object.health < self.a.hp_max then
       return true
