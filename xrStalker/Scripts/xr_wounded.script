class "see_mutant_evaluator" (property_evaluator)
------------
function see_mutant_evaluator:__init () super ()
end
------------
function see_mutant_evaluator:evaluate ()
    local enemy = self.object:best_enemy ()
    if enemy == nil then return false end
    local id = enemy:clsid ()
    if id == AI_RAT  or
       id == AI_RAT_G or
       id == AI_RAT_W or
       id == AI_ZOM or
       id == AI_ZOM_H or
       id == AI_POLTR or
       id == AI_FLESH or
       id == AI_FLE_G or 
       id == AI_DWARF or
       id == AI_CONTR or
       id == AI_BLOOD or
       id == AI_BURER or
       id == AI_GIANT or 
       id == AI_HIMER or
       id == AI_FRACT or 
       id == AI_DOG_B or            
       id == AI_DOG_R or 
       id == AI_BOAR 
       then return true
    end       
        
    return false
end
