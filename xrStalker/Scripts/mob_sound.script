function pick_sound_from_set(npc, set, last_sound_info)
	local sndset = snd[set]
	if not sndset then
		return nil
	end
	-- 1) Выбираем случайный звук из набора:
	local chance = 1
	local picked_snd = nil
	for n, s in pairs(snd[set]) do
		if math.random(chance) == 1 then
			picked_snd = s
		end
		chance = chance + 1
	end
	return picked_snd
end

