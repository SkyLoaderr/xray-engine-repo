		db.actor:set_task_state(task.fail, "val_suicide_find_lost_stalker", 0)
	end
end


function mil_bomb_explode (actor, npc)
    local source = nil
    local sim = alife ()
    if sim then
       local se_obj = sim:story_object (723)  
       if se_obj then
          source = level.object_by_id(se_obj.id)
       end
    end

    if source == nil then
       utils.abort ("Bomb with story id MIL_BOMB not found")
       return
    end

    local h = hit ();
    h.power = 1000;
    h.direction = vector():set( 1, 0, 0 );
    h.impulse = 1;
    h.draftsman = source;
    h.type = hit.chemical_burn;
    source:hit (h);
    
    db.actor:give_info_portion ("mil_freedom_under_attack")
    
    local lukash = utils.obj_by_sid (707)
    local skull = utils.obj_by_sid (708)
    if lukash == nil or skull == nil then return end
    
    h.power = 1;
    h.direction = vector():set( 1, 0, 0 );
    h.impulse = 1;
    h.draftsman = skull;
    h.type = hit.strike;
    lukash:hit (h);
    
--    source:explode (0)

end

