
function main()

	local fs_list = getFS():file_list_open_ex("$game_saves$",FS.FS_ListFiles,"*.*")
	local sz = fs_list:Size()
	
	printf("---not sorted")
	for it=0,sz-1 do
	local fl = fs_list:GetAt(it)
		printf("file name=%s; file_size=%d;file_modif=%s",fl:NameFull(),fl:Size(),fl:Modif() )
	end
	
	printf("---eSortByNameUp")
	fs_list:Sort(FS:eSortByNameUp)
	for it=0,sz-1 do
	local fl = fs_list:GetAt(it)
		printf("file name=%s; file_size=%d;file_modif=%s",fl:NameFull(),fl:Size(),fl:Modif() )
	end

	printf("---eSortByNameDown")
	fs_list:Sort(FS:eSortByNameDown)
