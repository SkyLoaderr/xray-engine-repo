	local fl = fs_list:GetAt(it)
		printf("file name=%s; file_size=%d;file_modif=%s",fl:NameFull(),fl:Size(),fl:Modif() )
	end

	printf("---eSortBySizeDown")
	fs_list:Sort(FS:eSortBySizeDown)
	for it=0,sz-1 do
	local fl = fs_list:GetAt(it)
		printf("file name=%s; file_size=%d;file_modif=%s",fl:NameFull(),fl:Size(),fl:Modif() )
	end

	printf("---eSortByModifUp")
	fs_list:Sort(FS:eSortByModifUp)
	for it=0,sz-1 do
	local fl = fs_list:GetAt(it)
		printf("file name=%s; file_size=%d;file_modif=%s",fl:NameFull(),fl:Size(),fl:Modif() )
	end
	
	printf("---eSortByModifDown")
	fs_list:Sort(FS:eSortByModifDown)
