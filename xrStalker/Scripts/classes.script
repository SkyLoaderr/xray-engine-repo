class "SinglePatrol"

function SinglePatrol:__init (npc, script_name, path_name, anim_set)
	self.npc = npc
	self.script_name = script_name
	self.probability = 10
	self.started = false
	self.path_name = path_name
	self.current_state = 0
	self.animations = anim_set
end

function SinglePatrol:process ()
	if self.started == false then
	   self.npc:script (true, self.script_name)
	   action (self.npc, move (move.standing, move.stand, move.line, patrol (self.path_name)),
			   look (look.search), anim (anim.free), cond (cond.time_end, 10000000))
	   self.started = true
	   return 
	   end

	if self.current_state == 1 then
	   if self.npc:action () then return 
	   else		
	      reset_action (self.npc, self.script_name)
	      action (self.npc, move (move.standing, move.stand, move.line, patrol (self.path_name)),
	   		      look (look.search), anim (anim.free), cond (cond.time_end, 10000000))
		  self.current_state = 0
		  return
	  end
    end		

	if math.random (1, 100) > self.probability then return end

    reset_action (self.npc, self.script_name)

    action (self.npc, move (move.standing, move.stand, move.line, patrol (self.path_name)),
		 	anim (self.animations:get_animation ()), cond (cond.anim_end))

end

function SinglePatrol:finish ()
	self.npc:script (false, self.script_name)
end