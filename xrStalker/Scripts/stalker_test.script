function callback_enter(zone,object)
	printf			("[%6d] Object %s entered zone %s",device():time_global(),object:name(),zone:name())
end

function callback_exit(zone,object)
	printf			("[%6d] Object %s exited zone %s",device():time_global(),object:name(),zone:name())
end


function main ()
	zone0			= get_level_object ("zone_mosquito_bald0000")
	zone1			= get_level_object ("zone_mosquito_bald0001")
	
	zone0:script	(stalker_test:script_name(),true)
	zone1:script	(stalker_test:script_name(),true)
	
	zone0:set_callback	(callback_enter,true);
	zone0:set_callback	(callback_exit,false);
	
	zone1:set_callback	(callback_enter,true);
	zone1:set_callback	(callback_exit,false);
	
	while true do
		wait			()
	end
	
	zone0:script	(stalker_test:script_name(),false)
	zone1:script	(stalker_test:script_name(),false)
	
--[
    stalker			= get_level_object ("m_stalker_e0000")
    actor			= get_actor()

    stalker:script	(true,stalker_test:script_name());
    
	printf			("%d",device():time_global())
	action (
		stalker, 
		anim		("stalker_2_1"),
		cond		(cond.time_end,500000000)
	)
	
	wait			(5000)
	
	printf			("%d",device():time_global())
	reset_action	(stalker,stalker_test:script_name())
	
	action (
		stalker, 
		anim		(anim.danger),
		cond		(cond.time_end,500000000)
	)
	
	while stalker:action() do
		wait		()
	end
	
    stalker:script	(false,stalker_test:script_name());
    --]
end