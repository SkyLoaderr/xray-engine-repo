function callback_enter(zone,object)
	printf			("[%6d] Object %s entered zone %s",device():time_global(),object:name(),zone:name())
end

function callback_exit(zone,object)
	printf			("[%6d] Object %s exited zone %s",device():time_global(),object:name(),zone:name())
end

function callback_static(object,action,index)
	printf			("[%6d] Object %s reached waypoint %d",device():time_global(),object:name(),index)
end

function hit_callback(self, amount,local_direction,who,bone_index)
	printf			("[%6d] Object %s was hit by object %s with power %d in bone %d and direction [%f][%f][%f]",
						device():time_global(),
						self:name(),
						who:name(),
						amount,
						bone_index,
						local_direction.x,
						local_direction.y,
						local_direction.z
					)
end

function hear_callback(self, who, sound_type, sound_position, sound_power)
	printf			("[%6d] Object %s hears sound by object %s with power %d , type %d from position [%f][%f][%f]",
						device():time_global(),
						self:name(),
						who:name(),
						sound_power,
						sound_type,
						sound_position.x,
						sound_position.y,
						sound_position.z
					)
end

