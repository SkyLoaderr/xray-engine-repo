function add_to_binder( npc )
    local action = this.action_commander( "action_commander" )
    
    if action:init( npc ) then
        local manager = npc:motivation_action_manager()

        manager:add_evaluator( prop_commander, const_evaluator( false ) )

        action:add_precondition( world_property( stalker_ids.property_enemy, false ) )
        action:add_effect( world_property( prop_commander, true ) )
        manager:add_action( act_commander, action )

        action = manager:action( stalker_ids.action_free_no_alife )
        action:add_precondition( world_property( prop_commander, true ) )
    end
end
