                <next>1</next>
                <next>2</next>
                <next>3</next>
                <next>10</next>
            </phrase>
            <phrase id="2">
                <text>Нужно оружие, выручи, а?</text>
                <next>21</next>
                <next>22</next>
            </phrase>
            <phrase id="21">
