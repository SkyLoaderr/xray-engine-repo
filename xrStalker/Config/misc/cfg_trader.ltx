meet_dialog = escape_trader_tutorial
anim = idle_chitaet
on_signal = action_end | mob_remark@reading

[mob_remark@reading]
dialog_enabled = true
meet_dialog = escape_trader_tutorial
anim = chitaet
on_signal = action_end | {=talking} mob_remark@reading_idle, {~60} mob_remark@reading, mob_remark@reading_idle

[mob_remark@reading_idle]
dialog_enabled = true
meet_dialog = escape_trader_tutorial
anim = chitaet_idle
on_signal = action_end | mob_remark@talking

; ------------------------------------------------------------------------------------------------------

[mob_remark@to_spinka]
dialog_enabled = true
meet_dialog = escape_trader_tutorial
anim = idle_spinka
on_signal = action_end | mob_remark@spinka

[mob_remark@spinka]
dialog_enabled = true
meet_dialog = escape_trader_tutorial
anim = spinka
on_signal = action_end | {=talking} mob_remark@spinka_idle, {~15} mob_remark@spinka2, {~60} mob_remark@spinka, mob_remark@spinka_idle

[mob_remark@spinka2]
