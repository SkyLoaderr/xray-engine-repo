[logic]
active = ph_sound@normal
on_hit = hit

[hit]
on_info = %+agr_nii_rupor_off%

[ph_sound@normal]
snd = music
on_info = {+agr_nii_alarm} ph_sound@alarm
on_info2 = {+agr_nii_rupor_off} nil
on_info3 = {!is_day} ph_idle

[ph_sound@alarm]
snd = siren
looped = true
on_info = {-agr_nii_alarm} ph_sound@normal
on_info2 = {+agr_nii_rupor_off} nil,{=gulag_empty(agr_nii) +agr_sniper_killed_1 +agr_sniper_killed_2 +agr_sniper_killed_3} ph_sound@fade

[ph_idle]
on_info = {+agr_nii_alarm} ph_sound@alarm
on_info2 = {+agr_nii_rupor_off} nil,{=gulag_empty(agr_nii) +agr_sniper_killed_1 +agr_sniper_killed_2 +agr_sniper_killed_3} ph_sound@fade
on_info3 = {=is_day} ph_sound@normal

[ph_sound@fade]
snd = siren
looped = true
on_timer = 20000 | nil