[logic]
active = sr_sound

[sr_sound]
snd = ambient\gunfire_2
position = agr_factory_gunfire
on_actor_inside = %+agr_factory_assault_start% sr_idle@sos

[sr_idle@sos]
on_timer = 15000 | %+agr_help_stalkers_start =agr_krot_sos% sr_idle

[sr_idle]
on_info = {+agr_help_stalkers_done} sr_idle@help_krot

[sr_idle@help_krot]
on_info = {+agr_help_stalkers_assault_dead} %=agr_krot_sos1 +agr_help_krot_start% nil, {+agr_help_stalkers_defence_dead} %=agr_krot_sos2 +agr_help_krot_start% nil
