[logic]
active = camper@wait
on_combat = combat
on_death = death
on_hit = hit
combat_ignore = combat_ignore

[combat]
on_info = {=see_actor} camper@kill_wait %+val_sacrifice_plr_detected% ;{=see_actor} 

[death]
on_info = %+val_sacrifice_guard2_dead%
on_info2 = {=killed_by_actor} %+val_sacrifice_plr_detected%

[hit]
on_info = {=hit_by_actor} walker@leave %+val_sacrifice_plr_detected%

[combat_ignore]

;401 = "val_sacrifice_victim"
;403 = "val_sacrifice_bloodsucker"
;404 = "val_sacrifice_guard1"
;405 = "val_sacrifice_guard2"

;--------------------------------------------------------------------------
; ждем пока первый охранник произнесет свою первую фразу
;--------------------------------------------------------------------------
[camper@wait]
path_walk = val_sacrifice_guard2_walk 
path_look = val_sacrifice_guard2_look
def_state_campering = guard
def_state_campering_fire = guard_fire
def_state_moving = patrol
def_state_moving_fire = patrol_fire
on_info = {+val_sacrifice_guard1_phrase1_done} remark@phrase1
on_info2 = {+val_sacrifice_plr_detected} walker@leave, {+val_sacrifice_victim_dead} walker@leave
combat_ignore_cond = {=check_fighting(403:401)}

;--------------------------------------------------------------------------
; фраза: Да он уже достал, в натуре! На этой неделе уже 3 раза туда...
;--------------------------------------------------------------------------
[remark@phrase1]
no_move = true
no_rotate = true
anim = guard
snd = speach
on_signal = sound_end | remark@phrase2
on_info = {+val_sacrifice_plr_detected} walker@leave, {+val_sacrifice_victim_dead} walker@leave
combat_ignore_cond = {=check_fighting(403:401)}

;--------------------------------------------------------------------------
; фраза: Ш-ш-ш-ш.. Слышал? Что-то у меня дурное предчувствие. Короче, не хочется мне из Лагеря уходить.
;--------------------------------------------------------------------------
[remark@phrase2]
no_move = true
no_rotate = true
anim = guard
snd = speach
on_signal = sound_end | %+val_sacrifice_guard2_phrase12_done%
on_info = {+val_sacrifice_plr_detected} walker@leave, {+val_sacrifice_guard1_phrase3_done} camper@kill_wait
combat_ignore_cond = {=check_fighting(403:401)}

;--------------------------------------------------------------------------
; ждем пока не убьют пленного
;--------------------------------------------------------------------------
[camper@kill_wait]
radius = 0
path_walk = val_sacrifice_guard2_walk 
path_look = val_sacrifice_guard2_look
def_state_campering = guard
def_state_campering_fire = guard_fire
def_state_moving = patrol
def_state_moving_fire = patrol_fire
no_retreat = true
on_info = {=is_dead_one(401)} walker@leave
combat_ignore_cond = {=check_fighting(403:401)}

;--------------------------------------------------------------------------
; уходим
;--------------------------------------------------------------------------
[walker@leave]
path_walk = val_sacrifice_guard2_leave_walk 
path_look = val_sacrifice_guard2_leave_look
combat_ignore_cond = {=check_fighting(403)}
