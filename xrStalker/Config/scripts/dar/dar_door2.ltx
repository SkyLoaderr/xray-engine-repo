[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
snd_open_start = trader_door_locked
on_info = {+dar_codelock2_unlock} ph_door@unlocked %+dar_open_door2%
on_info2 = {+x18_door2} ph_door@horror_knock %-x18_door2%

[ph_door@horror_knock]
locked = true
closed = true
snd_open_start = trader_door_locked
on_info = {~60} ph_door@horror_wait %=hit_npc(x18_point_knock:door:0:1000)%, ph_door@horror_silence %=hit_npc(x18_point_knock:door:0:1000)%
on_info2 = {+x18_door2_knock_stop} ph_door@locked

[ph_door@horror_wait]
locked = true
closed = true
snd_open_start = trader_door_locked
on_timer = 1500| ph_door@horror_knock

[ph_door@horror_silence]
locked = true
closed = true
snd_open_start = trader_door_locked
on_timer = 4000| ph_door@horror_knock
on_info = {+x18_door2_knock_stop} ph_door@locked

[ph_door@unlocked]
locked = false
closed = true
snd_init = trader_door_unlock
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

