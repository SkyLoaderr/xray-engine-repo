stereo = true
on_signal = sound_end | sr_idle@stand_up

[sr_idle@stand_up]
on_timer  = 15000| sr_sound_act@monolith_call %+bun_patrol_start%

[sr_sound_act@monolith_call]
snd = characters_voice\scenario\sarcofag\monolith_call_1
stereo = true 
on_signal = end|nil %+sar_monolith_call%