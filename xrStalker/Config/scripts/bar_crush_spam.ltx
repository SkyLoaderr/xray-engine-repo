[logic]
active = sr_idle@idle

[sr_idle@idle]
on_info = %=bar_check_heli_scene%
on_info2 = {+bar_ecolog_crush_heli_start} sr_idle@post_heli
on_timer = 5000| {-bar_ecolog_crush_heli_start} sr_idle@post_heli %+bar_ecolog_crush_heli_start =bar_start_heli_notice%

[sr_idle@post_heli]
on_timer = 5000| sr_idle@attract_ecolog
   
[sr_idle@attract_ecolog]
on_timer = 5000| sr_idle@attract_freedom %=bar_ecolog_crush_attract_actor%

[sr_idle@attract_freedom]
on_timer = 5000| sr_idle@freedom %=bar_freedom_attack_attract_actor%
                                                                                                                                                                                                   	
[sr_idle@freedom]
on_info = %=bar_check_heli_scene%
on_timer = 20000| {+bar_freedom_attack_ecolog} sr_idle@checker, {+bar_get_research_dead} sr_idle@checker, {+bar_get_research_done} sr_idle@checker, {+bar_resque_research_dead} sr_idle@checker, sr_idle@ecolog %=bar_freedom_spam%

[sr_idle@ecolog]
on_info = %=bar_check_heli_scene%
on_timer = 3000| {+bar_freedom_attack_ecolog} sr_idle@checker, {+bar_get_research_dead} sr_idle@checker, {+bar_resque_research_dead} sr_idle@checker, sr_idle@freedom %=bar_ecolog_spam%

[sr_idle@checker]
on_info = %=bar_check_heli_scene%
