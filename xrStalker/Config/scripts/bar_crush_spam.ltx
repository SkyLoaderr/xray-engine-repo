[logic]
active = sr_idle

[sr_idle]
on_actor_inside = sr_idle@start_freedom

[sr_idle@start_freedom]
on_info = %=bar_check_heli_scene%
on_timer = 8000| sr_idle@start_ecolog %=bar_freedom_spam_1%

[sr_idle@start_ecolog]
on_info = %=bar_check_heli_scene%
on_timer = 7000| sr_idle@idle %=bar_ecolog_spam_1%

[sr_idle@idle]
on_info = %=bar_check_heli_scene%
on_timer = 5000| {-bar_ecolog_crush_heli_start} sr_idle@post_heli %+bar_ecolog_crush_heli_start =bar_crush_heli_start%

[sr_idle@volkodav]
on_info = %=bar_check_heli_scene%
on_timer = 5000 | sr_idle@sniper %=play_snd(characters_voice\human_01\scenario\Rostok\volkodav_radio_enemy_1)%

[sr_idle@sniper]
on_info = %=bar_check_heli_scene%
on_timer = 7000 | sr_idle@volkodav_1 %=play_snd(characters_voice\human_01\scenario\Rostok\killer_radio_enemy_1)%

[sr_idle@volkodav_1]
on_info = %=bar_check_heli_scene%
on_timer = 5000 | sr_idle@sniper_1 %=play_snd(characters_voice\human_01\scenario\Rostok\volkodav_radio_enemy_2)%

[sr_idle@sniper_1]
on_info = %=bar_check_heli_scene%
on_timer = 4000 | sr_idle@post_heli %=play_snd(characters_voice\human_01\scenario\Rostok\killer_radio_enemy_1)%



[sr_idle@post_heli]
on_info = %=bar_check_heli_scene%
on_info2 = {+bar_ecolog_crush_heli_down} sr_idle@attract_ecolog %=bar_crush_heli_down%

[sr_idle@attract_ecolog]
