on_timer = 10000| {+bar_freedom_attack_ecolog} sr_idle@checker,{-bar_heli_scene_volkodav_die} sr_idle@ecolog_2 %=bar_freedom_spam_2%

[sr_idle@ecolog_2]
on_info = %=bar_check_heli_scene%
on_timer = 7000| {+bar_freedom_attack_ecolog} sr_idle@checker,{-bar_heli_scene_volkodav_die} sr_idle@freedom_3 %=bar_ecolog_spam_2%

[sr_idle@freedom_3]
on_info = %=bar_check_heli_scene%
on_timer = 7000| {+bar_freedom_attack_ecolog} sr_idle@checker,{-bar_heli_scene_volkodav_die} sr_idle@ecolog_3 %=bar_freedom_spam_3%

[sr_idle@ecolog_3]
on_info = %=bar_check_heli_scene%
on_timer = 7000| {+bar_freedom_attack_ecolog} sr_idle@checker,{-bar_heli_scene_volkodav_die} sr_idle@freedom_4 %=bar_ecolog_spam_3%

