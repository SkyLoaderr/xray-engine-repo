[logic]
active = follower1
on_death = death
on_hit = hit
combat_ignore = combat_ignore
on_combat = combat

[death]
on_info = {=killed_by_actor} %+val_escort_actor_helped%

[hit]
on_info = {=hit_by_actor} %+val_escort_actor_helped%

[combat]
on_info = %+val_escort_guard2_combat%

[follower1]
leader = 400
anim_walk = patrol
anim_run = assault
;no_retreat = true
combat_ignore_cond = {=val_fighting_captive -val_escort_combat -val_escort_captive_fled -val_escort_captive_can_leave}
