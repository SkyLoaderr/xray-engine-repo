[logic@val_escort_guard2]
active          = walker@val_escort_guard2_wait
on_death        = death@val_escort_guard2_wait
on_hit          = hit@val_escort_guard2_wait
on_combat       = combat@val_escort_guard2_wait
combat_ignore   = combat_ignore

[death@val_escort_guard2_wait]
on_info     = %-val_escort_guard2_combat +val_escort_guard2_dead%
on_info2    = {=killed_by_actor} %+val_escort_actor_helped%

[hit@val_escort_guard2_wait]
on_info     = {=hit_by_actor} %+val_escort_combat +val_escort_actor_helped%, %+val_escort_guard2_combat%
on_info2    = {+val_escort_combat -val_escort_nap1_start_combat} %+val_escort_actor_start_combat%
on_info3    = {=hitted_by(406) -val_escort_actor_start_combat} %+val_escort_nap1_start_combat%

[combat@val_escort_guard2_wait]
on_info     = %+val_escort_guard2_combat%
on_info2    = {=see_actor -val_escort_nap1_start_combat -val_escort_actor_start_combat} %+val_escort_actor_start_combat%
on_info3    = {=see_actor -val_escort_combat} remark@val_escort_guard2_fight %+val_escort_combat%

;--------------------------------------------------------------------------
; wait for scene start
;--------------------------------------------------------------------------
[walker@val_escort_guard2_wait]
path_walk           = guard2_wait_walk
path_look           = guard2_wait_look
on_info             = {+val_escort_start}           patrol@val_escort_guard2_walk
on_info2            = {+val_escort_captive_dead}    patrol@val_escort_guard2_return %-val_escort_guard2_combat%
on_info3            = {+val_escort_scene_fail}      patrol@val_escort_guard2_return %-val_escort_guard2_combat%
combat_ignore_cond  = {=check_fighting(400)}

;--------------------------------------------------------------------------
; escort captive
;--------------------------------------------------------------------------
[patrol@val_escort_guard2_walk]
path_walk           = captive_walk
path_look           = captive_look
formation           = back
on_info             = {+val_escort_combat}          remark@val_escort_guard2_fight
on_info2            = {+val_escort_captive_dead}    patrol@val_escort_guard2_return %-val_escort_guard2_combat%
on_info3            = {+val_escort_scene_fail}      patrol@val_escort_guard2_return %-val_escort_guard2_combat%
combat_ignore_cond  = {=check_fighting(400)}
;combat_ignore_cond  = {=check_fighting(400:406)}

;--------------------------------------------------------------------------
; fight with actor and nap1
;--------------------------------------------------------------------------
[remark@val_escort_guard2_fight]
anim                = wait_na
on_info             = {+val_escort_scene_fail}      patrol@val_escort_guard2_return
on_info2            = {+val_escort_captive_dead}    patrol@val_escort_guard2_return
combat_ignore_cond  = {=check_fighting(400) -val_escort_actor_start_combat}

;--------------------------------------------------------------------------
; 
;--------------------------------------------------------------------------
[patrol@val_escort_guard2_return]
path_walk = guards_return_walk 
path_look = guards_return_look
formation = line
