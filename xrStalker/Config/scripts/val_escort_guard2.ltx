on_info = {+val_escort_actor_helped} walker1 %-val_escort_guard2_combat%, %-val_escort_guard1_combat%
;on_info2 = {+val_escort_combat} walker1 %=val_escort_set_fight%
;on_signal = leader_dead | walker1

[walker1]
path_walk = val_escort_guard2_return_walk 
path_look = val_escort_guard2_return_look
combat_ignore_cond = {=val_fighting_captive -val_escort_captive_fled -val_escort_captive_can_leave}
