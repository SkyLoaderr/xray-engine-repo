[logic]
active = walker1
on_death = death
on_hit = hit
combat_ignore = combat_ignore

[death]
on_info = %+val_escort_captive_dead%

[hit]
on_info = {=hit_by_actor} nil %+val_opendoor_plr_detected%

[combat_ignore]

[walker1]
path_walk = val_opendoor_monolith_walk
path_look = val_opendoor_monolith_look
on_signal = soldier_start | remark@stand %+val_opendoor_soldier_start%
on_info = {+val_escort_guard1_combat} remark@wait, {+val_escort_guard2_combat} remark@wait, {+val_escort_guard3_combat} remark@wait
on_info2 = {+val_escort_guard1_dead +val_escort_guard2_dead} walker@leave %+val_escort_captive_can_leave%
combat_ignore_cond = always

[remark@stand]
no_move = true
no_rotate = true
anim = caution
combat_ignore_cond = always
