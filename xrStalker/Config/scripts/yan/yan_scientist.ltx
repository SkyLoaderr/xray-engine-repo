[logic]
active = walker@yan_start
actor_dialogs = actor_dialogs
combat_ignore = combat_ignore

[walker@yan_start]
path_walk = yan_ucheniy_walk_talk
path_look = yan_ucheniy_look_talk
combat_ignore_cond = always
on_info = {+yantar_scientists_talk} remark@yan_professor_talk_1

[remark@yan_professor_talk_1]
snd = yantar_professor_to_kruglov_1
anim = wait
;target = 900
on_signal = sound_end | %+yantar_kruglov_phrase_1%
on_info = {+yantar_professor_phrase_2} remark@yan_professor_talk_2
combat_ignore_cond = always

[remark@yan_professor_talk_2]
snd = yantar_professor_to_kruglov_2
;target = 900
anim = wait
on_signal = sound_end | walker@yan_1 %+yantar_kruglov_phrase_2%
;on_info = {+yantar_scientists_talk_end} walker@yan_1
combat_ignore_cond = always



[walker@yan_1]
path_walk = yan_ucheniy_walk
path_look = yan_ucheniy_look
meet_talk_enabled = true
combat_ignore_cond = always
on_info = {+yan_actor_talk_ucheniy} walker@yan_2
on_info2 = {+yan_find_scientist_done} walker@scientist_quest_good	

[walker@scientist_quest_good]
path_walk = yan_ucheniy_walk_talk
path_look = yan_ucheniy_look_talk
meet_talk_enabled = true
combat_ignore_cond = always
on_info = {+yantar_scientist_talk_helmet} remark@talk_about_helmet

[remark@talk_about_helmet]
snd = yantar_professor_radiation_quest_2
anim = wait
combat_ignore_cond = always
on_signal = sound_end | walker@go_to_room

[walker@go_to_room]
path_walk = yan_general_scientist_room_walk
path_look = yan_ucheniy_look_talk
on_timer = 15000 | walker@go_to_actor
combat_ignore_cond = always

[walker@go_to_actor]
path_walk = yan_ucheniy_walk_talk
path_look = yan_ucheniy_look_talk
meet_talk_enabled = true
combat_ignore_cond = always
on_info = {-yan_kill_brain_task_start +yantar_scientist_talk_good_quest} remark@scientist_talk_good_quest

[remark@scientist_talk_good_quest]
snd = yantar_professor_brain_quest_good_1
anim = wait
combat_ignore_cond = always
on_info = {+yantar_scientist_talk_good_quest_1} remark@professor_talk_about_vasilyev

[remark@professor_talk_about_vasilyev]
snd = yantar_professor_brain_quest_good_3
anim = wait
combat_ignore_cond = always
on_signal = sound_end | walker@yan_2

[walker@yan_2]
path_walk = yan_ucheniy_walk_talk
path_look = yan_ucheniy_look_talk
meet_talk_enabled = true
combat_ignore_cond = always
on_info = {-yan_actor_talk_ucheniy} walker@yan_1
on_info2 = {-yantar_professor_talk_about_brain_end +yantar_professor_talk_about_brain} remark@professor_about_brain
on_info3 = {+yantar_scientist_talk_semenov_die -yan_kill_brain_task_start} remark@talk_semenov_die
meet = meet@yan_general_scientist

[remark@talk_semenov_die]
snd = yantar_professor_brain_quest_bad_1
anim = wait
combat_ignore_cond = always
on_info = {+yantar_scientist_talk_semenov_die_1} remark@talk_semenov_die_1

[remark@talk_semenov_die_1]
snd = yantar_professor_brain_quest_bad_2
anim = wait
combat_ignore_cond = always
on_info = {+yan_find_vasilyev_start} remark@professor_talk_about_vasilyev

[remark@professor_about_brain]
snd = yantar_professor_radiation_quest_1
anim = wait
on_signal = sound_end | walker@yan_1 %+yantar_professor_talk_about_brain_end%
on_info = {+yan_find_scientist_start} walker@yan_1 %+yantar_professor_talk_about_brain_end%
meet = meet@yan_general_scientist_1
combat_ignore_cond = always

[meet@yan_general_scientist]
meet_state 		= wait@yantar_professor_talk_1
meet_state_wpn 	= wait@yantar_professor_talk_1
victim 			= nil
victim_wpn 		= nil
use             = true
use_wpn         = false

[meet@yan_general_scientist_1]
use             = true
use_wpn         = false


[actor_dialogs]
id = yantar_general_ucheniy_talk_start,yantar_general_ucheniy_talk_end

[combat_ignore]
combat_ignore_cond = always