[logic]
active = sr_idle

[sr_idle]
on_actor_inside = {+sar_access_decoding -sar_start_decoding =actor_has_decoder} sr_timer %+sar_start_decoding%

[sr_timer]
type = dec
start_value = 90000
on_value = 0| nil %+sar_finish_decoding%
on_actor_outside = {+sar_start_decoding -sar_finish_decoding} sr_idle %-sar_start_decoding -sar_access_decoding%
ignore_static