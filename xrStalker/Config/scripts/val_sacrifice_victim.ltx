[logic@val_sacrifice_victim]
active          = remark@val_sacrifice_victim_wait
on_death        = death@val_sacrifice_victim
combat_ignore   = combat_ignore

[death@val_sacrifice_victim]
on_info     = %+val_sacrifice_victim_dead%
on_info2    = {=killed_by(404)} %=hit_npc(404:bip01_spine1:100:1000)%, {=killed_by(405)} %=hit_npc(405:bip01_spine1:100:1000)%

;401 = "val_sacrifice_victim"
;403 = "val_sacrifice_bloodsucker"
;404 = "val_sacrifice_guard1"
;405 = "val_sacrifice_guard2"

[remark@val_sacrifice_victim_wait]
no_move             = true
no_rotate           = true
anim                = wait
on_info             = {+val_sacrifice_start} remark@val_sacrifice_victim_phrase1
combat_ignore_cond  = always

;--------------------------------------------------------------------------
; фраза: 
; ждем на фразу 3 первого охранника
;--------------------------------------------------------------------------
[remark@val_sacrifice_victim_phrase1]
no_move             = true
;no_rotate           = true
anim                = wait
target              = 404
snd                 = speech
on_signal           = sound_end | %+val_sacrifice_victim_phrase1_end%
on_info             = {+val_sacrifice_guard1_phrase3_end} remark@val_sacrifice_victim_phrase2
combat_ignore_cond  = always

;--------------------------------------------------------------------------
; фраза: 
; ждем на фразу 3 первого охранника
;--------------------------------------------------------------------------
[remark@phrase2]
no_move             = true
;no_rotate           = true
anim                = wait
target              = 404
snd                 = speech
on_signal           = sound_end | remark@stay %+val_sacrifice_victim_phrase2_end%
combat_ignore_cond  = always

[remark@stay]
no_move             = true
no_rotate           = true
anim                = wait
on_info             = {+val_sacrifice_guard1_dead +val_sacrifice_guard2_dead} %+val_sacrifice_finish%
combat_ignore_cond  = always
