[logic]
active = walker1
combat_ignore = combat_ignore
on_death = death

[death]
on_info = {+val_sacrifice_near_pit} %+val_sacrifice_victim_killed =val_sacrifice_victim_dead +val_sacrifice_finish%

[walker1]
path_walk = val_sacrifice_victim_walk
path_look = val_sacrifice_victim_look
on_info = {+val_sacrifice_plr_detected} walker@flee %+val_sacrifice_finish%
on_signal = pit | remark@near_pit %+val_sacrifice_near_pit%
; %=val_sacrifice_force_guards_kill_victim%
combat_ignore_cond = always
combat_ignore_keep_when_attacked = true

[remark@near_pit]
no_move = true
no_rotate = true
anim = caution
snd = val_sacrifice_help_1
combat_ignore_cond = always
combat_ignore_keep_when_attacked = true
on_info = {+val_sacrifice_plr_detected} walker@flee %+val_sacrifice_finish%
on_info2 = {+val_sacrifice_phrase_threat_1_done} remark@near_pit2
on_signal = sound_end | %+val_sacrifice_phrase_help_1_done%

