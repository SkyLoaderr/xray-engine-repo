[logic]
active      = ph_button@locked

[ph_button@locked]
anim_blend  = false
anim        = button_false
on_info     = {+cit_jail_door_opened} ph_button@unlocked
on_info2    = {+cit_button_broken} ph_button@broken %+cit_jail_door_opened%
on_press    = ph_button@unlocked %+cit_jail_door_opened%

[ph_button@unlocked]
anim_blend  = false
anim        = button_true
on_info     = {-cit_jail_door_opened} ph_button@locked
on_info2    = {+cit_button_broken} ph_button@broken %+cit_jail_door_opened%
on_press    = ph_button@locked %-cit_jail_door_opened%

[ph_button@broken]
anim_blend  = false
anim        = button_true
on_info     = nil
