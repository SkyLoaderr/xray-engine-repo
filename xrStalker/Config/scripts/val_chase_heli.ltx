[logic]
active = heli_move@wait

[heli_move@wait]
path_move           = val_chase_heli_wait_move
engine_sound        = false
on_info             = {+val_exit_gate_show} heli_move@ready

[heli_move@ready]
path_move           = val_chase_heli_ready_move
path_look           = val_chase_heli_ready_look
engine_sound        = true
combat_enemy        = nil
combat_use_rocket   = false
combat_use_mgun     = true
;invulnerable       = true
on_info             = {+val_chase_plr_in_car} heli_move@start

[heli_move@start]
path_move           = val_chase_heli_start_move
path_look           = val_chase_heli_start_look
engine_sound        = true
combat_enemy        = nil
combat_use_rocket   = false
combat_use_mgun     = true
;invulnerable       = true
;on_info            = {+val_stairs_start} heli_move@start
immortal            = true
on_info             = {=heli_health_le(25) ~25} heli_move@die1, {=heli_health_le(25) ~50} heli_move@die2, {=heli_health_le(25) ~75} heli_move@die3, {=heli_health_le(25)} heli_move@die4
on_signal           = arrived | heli_move@chase

[heli_move@chase]
path_move           = val_chase_heli_chase_move
engine_sound        = true
combat_enemy        = actor
combat_use_rocket   = true
combat_use_mgun     = false
;invulnerable       = true
immortal            = true
on_info             = {=heli_health_le(25) ~25} heli_move@die1, {=heli_health_le(25) ~50} heli_move@die2, {=heli_health_le(25) ~75} heli_move@die3, {=heli_health_le(25)} heli_move@die4

[heli_move@die1]
path_move     = val_monolith_heli2_die_move1
combat_ignore = true
immortal      = true

[heli_move@die2]
path_move     = val_monolith_heli2_die_move2
combat_ignore = true
immortal      = true

[heli_move@die3]
path_move     = val_monolith_heli2_die_move3
combat_ignore = true
immortal      = true

[heli_move@die4]
path_move     = val_monolith_heli2_die_move4
combat_ignore = true
immortal      = true
