[logic]
active = walker@go
on_death = death
combat_ignore = combat_ignore

[death]
on_info = %+val_escort_captive_dead%

[combat_ignore]

;--------------------------------------------------------------------------
; встреча отключена
;--------------------------------------------------------------------------
[meet@ignore]
meet_state     = 0|wait
meet_state_wpn = 0|guard
victim         = 0|actor
victim_wpn     = 0|actor
use            = false
use_wpn        = false

;--------------------------------------------------------------------------
; стандартный диалог
;--------------------------------------------------------------------------
[meet@def]
meet_state = 3|wait
meet_state_wpn = 3|wait
victim = 30|actor
victim_wpn = 20|actor
use = true
use_wpn = true

;--------------------------------------------------------------------------
; стандартный диалог
;--------------------------------------------------------------------------
[meet@talk]
meet_dialog     = val_escort_captive_dialog
meet_state      = 3|wait
meet_state_wpn  = 3|wait
victim = 30|actor
victim_wpn = 20|actor
use = true
use_wpn = true

;--------------------------------------------------------------------------
; 
;--------------------------------------------------------------------------
[walker@go]
path_walk           = val_escort_captive_walk
path_look           = val_escort_captive_look
on_signal           = fight | walker@hide %+val_escort_combat -val_escort_wait%
on_info             = {+val_escort_combat} walker@hide
on_info2            = {+val_escort_guard1_combat} remark@wait, {+val_escort_guard2_combat} remark@wait
meet                = meet@ignore
combat_ignore_cond  = always

;--------------------------------------------------------------------------
; 
;--------------------------------------------------------------------------
[remark@wait]
no_move             = true
no_rotate           = true
anim                = hide
on_info             = {+val_escort_combat} walker@hide
on_info2            = {-val_escort_guard1_combat -val_escort_guard2_combat} walker@go
meet                = meet@ignore
combat_ignore_cond  = always

;--------------------------------------------------------------------------
; 
;--------------------------------------------------------------------------
[walker@hide]
path_walk           = val_escort_captive_hide_walk
path_look           = val_escort_captive_hide_look
def_state_moving1   = sprint
def_state_moving2   = sprint
def_state_moving3   = sprint
meet                = meet@ignore
on_info             = {+val_escort_guard1_dead +val_escort_guard2_dead} follower@go_to_nap1
combat_ignore_cond  = always

;--------------------------------------------------------------------------
; 
;--------------------------------------------------------------------------
[follower@go_to_nap1]
leader          = 406
meet            = meet@ignore
;stub_for_corpse = true
;distance        = 2
;on_signal       = leader_dead | remark@check_state
on_info         = {=distance_to_obj_le(406:2)} remark@check_state
combat_ignore_cond  = always

;--------------------------------------------------------------------------
[remark@check_state]
no_move     = true
;no_rotate   = true
target      = 406
anim        = wait
meet        = meet@ignore
on_info     = {-val_escort_nap1_dead} remark1@phrase1, remark1@phrase2
combat_ignore_cond  = always

;--------------------------------------------------------------------------
; фраза: Черт подери!!!...Эх-ххх...Пусть земля тебе будет пухом, дружище.
;--------------------------------------------------------------------------
[remark1@phrase2]
no_move             = true
;no_rotate           = true
target              = 406
anim                = wait
snd                 = val_escort_dead
meet                = meet@ignore
on_signal           = sound_end | {+val_escort_actor_helped} remark@talk, walker@leave
combat_ignore_cond  = always

;--------------------------------------------------------------------------
; фраза: Пуля! Спасибо, друг. Я блин уже с жизнью попрощался!!
;--------------------------------------------------------------------------
[remark1@phrase1]
no_move             = true
;no_rotate           = true
target              = 406
anim                = wait
snd                 = val_escort_captive_phrase2
meet                = meet@ignore
on_signal           = sound_end | {+val_escort_actor_helped} remark1@wait1 %+val_escort_captive_phrase1_end%, remark1@wait2 %+val_escort_captive_phrase1_end%
combat_ignore_cond  = always

;--------------------------------------------------------------------------
; ждем когда nap1 скажет фразу: Это вот сталкера благодари. Он мне помог.
;--------------------------------------------------------------------------
[remark1@wait1]
no_move             = true
;no_rotate           = true
target              = 406
anim                = wait
meet                = meet@ignore
on_info             = {+val_escort_nap1_phrase1_end} remark1@phrase3
combat_ignore_cond  = always

;--------------------------------------------------------------------------
; фраза: Спасибо, чувак!
;--------------------------------------------------------------------------
[remark1@phrase3]
no_move             = true
;no_rotate           = true
anim                = wait
snd                 = val_escort_captive_phrase3
meet                = meet@ignore
on_signal           = sound_end | remark@talk
combat_ignore_cond  = always

;--------------------------------------------------------------------------
; фраза: Подходи пообщаемся.
;--------------------------------------------------------------------------
[remark@talk]
no_move         = true
;no_rotate       = true
snd             = val_escort_phrase_invite
meet            = meet@talk
on_timer        = 60000 | walker@leave
combat_ignore_cond  = always

;--------------------------------------------------------------------------
; ждем когда nap1 скажет фразу: Жив-здоров? Тогда возвращаемся на Базу за подмогой.
;--------------------------------------------------------------------------
[remark1@wait2]
no_move             = true
;no_rotate           = true
target              = 406
anim                = wait
meet                = meet@ignore
on_info             = {+val_escort_nap1_phrase2_end} walker@leave
combat_ignore_cond  = always

;--------------------------------------------------------------------------
[walker@leave]
path_walk           = val_escort_captive_leave_walk
path_look           = val_escort_captive_leave_look
;meet               = meet@ignore
;combat_ignore_cond = always
on_signal           = arrived | nil %+val_escort_captive_offline%
