[logic]
active = follower@walk
on_death = death
on_hit = hit
combat_ignore = combat_ignore
on_combat = combat

[death]
on_info = %-val_escort_guard1_combat +val_escort_guard1_dead%
on_info2 = {=killed_by_actor} %+val_escort_actor_helped%

[hit]
on_info = {=hit_by_actor} %+val_escort_combat +val_escort_actor_helped +val_escort_guard1_combat%, %+val_escort_guard1_combat%
on_info2 = {+val_escort_combat -val_escort_nap1_start_combat} %+val_escort_actor_start_combat%
on_info3 = {=hitted_by(406) -val_escort_actor_start_combat} %+val_escort_nap1_start_combat%

[combat]
;on_info = %+val_escort_guard1_combat%
on_info = {=see_actor -val_escort_nap1_start_combat -val_escort_actor_start_combat} %+val_escort_actor_start_combat%
on_info = {=see_actor -val_escort_combat} remark@fight %+val_escort_combat%

[combat_ignore]

[follower@walk]
leader = 400
anim_walk = patrol
anim_run = assault
no_retreat = true
on_info = {+val_escort_combat} remark@fight
on_info2 = {+val_escort_nap1_dead} walker@return %-val_escort_guard1_combat%, {+val_escort_captive_dead} walker@return %-val_escort_guard1_combat%, %-val_escort_guard1_combat%
;combat_ignore_cond = {-val_escort_combat !see_actor}
combat_ignore_cond = {=check_fighting(400) -val_escort_actor_start_combat} ;{=check_fighting(400:406) !see_actor}
;on_signal = leader_dead | walker@return

[remark@fight]
no_retreat = true
on_info = {+val_escort_nap1_dead} walker@return, {+val_escort_captive_dead} walker@return ;, %-val_escort_guard1_combat%
;on_info2 = {+val_escort_actor_start_combat} %=val_escort_captive_enemy%
combat_ignore_cond = {=check_fighting(400) -val_escort_actor_start_combat}

[walker@return]
path_walk = val_escort_guard1_return_walk 
path_look = val_escort_guard1_return_look
