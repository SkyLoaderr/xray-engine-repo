[logic]
active = follower1
on_death = death
on_hit = hit
combat_ignore = combat_ignore
on_combat = combat

[death]
on_info = %-val_escort_guard1_combat +val_escort_guard1_dead%
on_info2 = {=killed_by_actor} %+val_escort_actor_helped%

[hit]
on_file = {=hit_by_actor -val_escort_nap1_start_combat} %+val_escort_actor_start_combat%
on_info2 = {=hit_by_actor} %+val_escort_combat +val_escort_actor_helped%
on_info3 = {=val_hit_by_nap1 -val_escort_actor_start_combat} %+val_escort_nap1_start_combat%

[combat]
on_info = %+val_escort_guard1_combat%

[follower1]
leader = 400
anim_walk = patrol
anim_run = assault
no_retreat = true
on_info = {+val_escort_combat} %=val_escort_set_fight%, %-val_escort_guard1_combat%
on_info2 = {+val_escort_captive_dead} walker1
combat_ignore_cond = {=val_fighting_captive -val_escort_actor_start_combat}
;on_signal = leader_dead | walker1

[walker1]
path_walk = val_escort_guard1_return_walk 
;path_look = val_escort_guard1_return_look
