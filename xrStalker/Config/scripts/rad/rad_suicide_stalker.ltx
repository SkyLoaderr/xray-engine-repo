[logic]
active = walker1
on_death = death

[death]
on_info = %=rad_suicide_stalker_died%

[walker1]
path_walk = rad_suicide_walk
path_look = rad_suicide_look
meet_dialog = rad_suicider_dialog
meet_talk_enabled = true
meet_state = wait_na
on_info = {+rad_suicide_artefact_given} remark@die

[remark@die]
no_move = true
no_rotate = true
anim = suicide
snd = rad_suicide_before_death
snd_anim_sync = true
on_signal = action_end | nil %=rad_suicide_kill_self%

