[helicopter]

GroupControlSection		= spawn_group
$spawn					= "vehicles\helicopter"
$prefetch				= 1
cform                   = skeleton
class					= C_HLCPTR
script_binding          = bind_heli.bind
visual                  = physics\vehicles\mi24\veh_mi24_u_01.ogf

//параметры построения пути
path_linear_acc_fw				=  4; 3;5; 3.0 ;m/s  ; линейное ускорение при разгоне
path_linear_acc_bk				=  4; 0.5; 3;  3.5;3 ;8.0 ;m/s	; линейное ускорение торможения

path_angular_sp_pitch			= 0.25 ;0.35; 0.65; 0.85; 0.45										; скорость изменения высоты пути при скорости "velocity"
path_angular_sp_pitch_0			= 0.25										; скорость изменения высоты пути при скорости "0"
path_angular_sp_heading			= 0.7;0.75; 0.85 0.95 0.55; 0.65  ;0.55; 0.45; 0.35; 0.4		    ; угловая скорость пути при скорости "velocity"
path_angular_sp_heading_0		= 1.57		    ; угловая скорость пути при скорости "0"m/s

//пфраметры наклона модели 
model_angular_sp_bank			= 0.45;0.35; 0.45; 0.35; 0.4 ;0.35    ; скорость поворота модели по оси Z (как быстро модель повернется по курсу движения с учетом угловой скорости)
model_angular_sp_pitch			= 0.25;0.4; 0.55; 0.35; 0.3     ; скорость поворота модели по оси X в зависимости от текущей линейной скорости
model_pitch_koef				= 0.018 ;0.020; 0.015; 0.009;0.007   ; коэф наклона модели по оси X в зависимости от текущей линейной скорости
model_bank_koef					= 0.02;0.02    ; коэф наклона модели по оси Z в зависимости от текущих линейной и угловой скоростей
on_point_range_dist				= 10.0    ; служебная информация


;default, can be redefined by script
velocity					= 25.0					;m/sec   скорость, с которой патрулировать
min_altitude				= 30;15 20	;20.0		;m		 min altitude in free state
;attack_velocity			= 15.0; 15; 10					;m/sec    скорость, с которой атаковать врага
;altitude					= 50	;20.0			;m		 высота, на которой патрулировать

use_rocket					= true			;              использовать ракеты при атаке
use_mgun					= true			;              использовать пулемет при атаке
min_mgun_attack_dist		= 20;15.0	;m   мин расстояние при котором можно исп пулемет
max_mgun_attack_dist		= 100;300.0 ;m   макс расстояние при котором можно исп пулемет
min_rocket_attack_dist		= 50;15.0	;m   мин расстояние при котором можно исп ракеты
max_rocket_attack_dist		= 200;150.0 ;m   макс расстояние при котором можно исп ракеты
time_between_rocket_attack	= 500 ; 1500 ; msec  задержка между ракетами
syncronize_rocket			= false; true        пускать ракеты парами или по очереди (лев-прав-лев-прав)

death_angular_vel			= 3.0,3.0,0.0  ; при гибели в воздухе дать угловую скорость модели      
death_lin_vel_koeff			= 1.2          ; при гибели в воздухе умножить собственную лин скорость на коэфф


; light, particles etc
light_range							= 10.0
light_brightness					= 5.0
light_color							= 0.9,0.9,0.5
light_color_animmator				= koster_00

smoke_particle						= damage_fx\heli_burn			;партиклы при ранении
explode_particle					= explosions\expl_mushroom_01	;партиклы при взрыве
explode_sound						= weapons\heli_explosion		;звук собственного взрыва

;------------------------------все для пулемета
snd_shoot_rocket					= weapons\heli_rocket_shoot		;звук выстрела ракетой   

fire_dispersion_base	= 4   ; 2
