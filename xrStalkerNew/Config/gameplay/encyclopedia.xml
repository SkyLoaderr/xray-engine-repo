<window>
    <!-- ENCYCLOPEDIA INFO BACKGROUND -->
    <einfo_frame_window x="75" y="60" width="500" height="505" a="80">
        <base_texture>ui\ui_pda_frame_sub</base_texture>
    </einfo_frame_window>

    <!-- ENCYCLOPEDIA INFO BACKGROUND HEADER -->
    <einfo_frame_line x="5" y="14" width="490" height="18">
        <title x="10" y="1" width="435" height="18">
            <text font="letterica16" r="255" g="255" b="255"></text>
        </title>
        <base_texture>ui\ui_string_03</base_texture>
    </einfo_frame_line>

    <!-- ENCYCLOPEDIA LIST BACKGROUND -->
    <elist_frame_window x="585" y="60" width="255" height="505" a="80">
        <base_texture>ui\ui_pda_frame_sub</base_texture>
    </elist_frame_window>

    <!-- ENCYCLOPEDIA LIST header -->
    <elist_frame_line x="5" y="14" width="245" height="140">
        <title x="10" y="5" width="545" height="440">
            <text font="letterica18" r="255" g="255" b="255">ENCYCLOPEDIA</text>
        </title>
        <base_texture>ui\ui_string_02</base_texture>
    </elist_frame_line>

    <!-- ENCYCLOPEDIA INDEX LIST -->
    <idx_list x="15" y="50" width="245" height="480" item_height="15">
        <font font="letterica16" r="255" g="255" b="255"></font>
    </idx_list>

    <!--  ANIMATED STATIC -->
    <a_static x="210" y="-3" width="32" height="32"
            frames          = "16"
            duration        = "1000"
            columns         = "8"
            frame_width     = "32"
            frame_height    = "32"
            cyclic          = "1"
            autoplay        = "1"
    >
        <texture>ui\ui_pda_anims_02</texture>
    </a_static>

    <!-- ENCYCLOPEDIA INFO LIST -->
    <info_list x="10" y="40" width="470" height="480" item_height="15">
        <font font="letterica18" r="255" g="255" b="255"></font>
    </info_list>

    <!-- ENCYCLOPEDIA ITEM IMAGE INFO -->
    <item_static x="260" y="40" width="220" height="200">
        <!-- MASK -->
        <mask_frame_window x="0" y="0" width="500" height="500" a="70">
            <base_texture>ui\ui_pda_frame_sub</base_texture>
        </mask_frame_window>
    </item_static>

</window>

