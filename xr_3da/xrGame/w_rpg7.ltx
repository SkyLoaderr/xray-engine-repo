hit_impulse		= 350
hit_type = explosion	;wound ;shock\strike\burn

fire_distance            = 400
bullet_speed			 = 300			;начальная скорость пули
rpm                      = 200
;---------------------------------------------------------------
; end ttc

hud                      = wpn_rpg7_hud
normal                   = 0, 1, 0
position                 = -0.03, -0.05, 0.27
orientation              = 0, -8, 0

;startup_ammo             = 90
visual                   = weapons\rpg_7\wpn_rpg_7.ogf


tracer_head_speed	 = 50
tracer_max_length		= 3

tracer_trail_scale	 = 0.75
tracer_start_length	 = 1
tracer_width		 = 0.07

explode_duration		 = 5		;подолжительность взрыва (с)

light_color		 = 0.6,0.5,0.3
light_range		 = 20.0
light_var_color		 = 0.05
light_var_range		 = 0.5
light_time 		 = 0.75

ph_mass			 = 1
;cost			 = 350

;addons
scope_status				= 1
silencer_status				= 0
grenade_launcher_status		= 0

scope_texture		= wpn\wpn_crosshair

zoom_enabled			= true
scope_zoom_factor	    = 30

;звуки
snd_draw			= weapons\generic_draw
snd_holster			= weapons\generic_holster
snd_shoot			= weapons\rpg7_shoot
snd_empty			= weapons\generic_empty
snd_reload			= weapons\rpg7_reload
snd_explode			= weapons\rpg7_explode

grenade_bone		= grenade

;rocket launcher
rocket_class		= wpn_rpg7_missile
launch_speed		= 50

;///////////////////////////////////////////////////////
;спавнить автоматически боеприпасы при подъеме оружия
