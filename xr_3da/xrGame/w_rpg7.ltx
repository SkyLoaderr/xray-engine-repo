[wpn_rpg7]

GroupControlSection	= spawn_group
discovery_dependency = 
$spawn                   = "weapons\rpg-7"					; option for Level Editor
$npc			 = on		; option for Level Editor
$prefetch 		 = 8
scheduled            	= off              ; option for ALife Simulator
cform                    = skeleton
class                    = W_RPG7
min_radius               = 50
max_radius               = 150
max_zoom_factor			 = 5.f

cost					 = 1800	;4000
weapon_class			 = heavy_weapon

ammo_limit		 = 120
ammo_current		 = 96
ammo_elapsed		 = 12

ammo_mag_size		 = 1
ammo_class		 = ammo_og-7b

hand_dependence		 = 2

slot 			 = 2
inv_name		= RPG7
inv_name_short		= RPG7
inv_weight		= .5

inv_grid_width		= 5
inv_grid_height		= 1
inv_grid_x			= 6
inv_grid_y			= 0

;-----------------------------------------------------------------------------------
;базовая дисперсия
fire_dispersion_base		= 1.5   ;угол (в градусах) базовой дисперсии оружия (оружия зажатого в тисках)

;отдача
cam_relax_speed         	= 5.0	;скорость возврата в исходное положение
cam_dispersion          	= 3.0	;увеличения угла (в градусах) с каждым выстрелом
cam_max_angle				= 8		;максимальный угол отдачи
cam_horz_prob				= 0.5	;вероятность отклонения по горизонтали эффектора во время стрельбы (1 - всегда отклоняется)
cam_horz_factor				= 2.5	;импирический коэффициент отклонения по горизонтали (чем больше, тем сильнее разброс)

fire_dispersion_condition_factor = 5	;увеличение дисперсии в процентах при максимальном износе 
misfire_probability 		= 0.0001	;вероятность осечки при максимальном износе 
condition_shot_dec 			= 0.00003	;увеличение износа при каждом выстреле
;-----------------------------------------------------------------------------------

direction                = 0, 0, 1
shell_point				 = 0.0, 0.0, 0.0
fire_point               = 0.0, 0.18, 0.0

smoke_particles		   = weapons\generic_rpg_shot

rpm_empty_click 	 = 200

; ttc
;---------------------------------------------------------------
